rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ==================== HELPER FUNCTIONS ====================
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isAdmin == true;
    }
    
    function isAdminEmail() {
      return isAuthenticated() && 
             request.auth.token.email in ['abdullahmohzar@gmail.com'];
    }
    
    // ==================== USERS COLLECTION ====================
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.uid == userId;
      allow update: if isOwner(userId) 
                    && request.resource.data.uid == resource.data.uid;
      allow delete: if false;
    }
    
    // ==================== CARTS COLLECTION ====================
    match /carts/{userId} {
      allow read, write: if isOwner(userId);
      
      match /items/{itemId} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // ==================== ORDERS COLLECTION ====================
    match /orders/{orderId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if false;
    }
    
    // ==================== WISHLISTS COLLECTION ====================
    // Structure: wishlists/{visibilityDoc} where visibilityDoc contains { items: [], userId: uid }
    match /wishlists/{docId} {
      // Allow if user owns this wishlist doc (userId field matches auth uid)
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // ==================== PRODUCTS COLLECTION ====================
    match /products/{productId} {
      // Anyone can read products (including unauthenticated for browsing)
      allow read: if true;
      // Only admin SDK or admin users can write
      allow write: if isAdmin() || isAdminEmail();
    }
    
    // ==================== CATEGORIES COLLECTION ====================
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin() || isAdminEmail();
    }
    
    // ==================== REVIEWS COLLECTION ====================
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if isAuthenticated() 
                    && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() 
                            && resource.data.userId == request.auth.uid;
    }
    
    // ==================== FLASH SALES COLLECTION ====================
    match /flashSales/{saleId} {
      allow read: if true;
      allow write: if isAdmin() || isAdminEmail();
    }
    
    // ==================== FLASH SALE ORDERS ====================
    match /flashSaleOrders/{orderId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if false;
    }
    
    // ==================== NOTIFICATIONS COLLECTION ====================
    // Flat collection structure with userId field
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if false; // Only server can create notifications
    }
    
    // ==================== ADMINS COLLECTION ====================
    match /admins/{adminId} {
      allow read: if isOwner(adminId);
      allow write: if false;
    }
    
    // ==================== DEALS/DISCOUNTS (if using separate collection) ====================
    match /deals/{dealId} {
      allow read: if true;
      allow write: if isAdmin() || isAdminEmail();
    }
  }
}
